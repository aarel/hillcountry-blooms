<section class="blog-hero" data-section-id="{{ section.id }}">
  {% assign hero_image = section.settings.image | default: blog.image %}
  <div class="blog-hero__background"{% if hero_image %} style="background-image: url({{ hero_image | image_url: width: 1920 }});"{% endif %}></div>
  <div class="blog-hero__overlay"></div>
  <div class="blog-hero__inner">
    <h1 class="blog-hero__title">{{ section.settings.heading | default: blog.title }}</h1>
    {% if section.settings.subheading != blank %}
      <p class="blog-hero__subtitle">{{ section.settings.subheading }}</p>
    {% elsif blog.metafields.custom.hero_subheading %}
      <p class="blog-hero__subtitle">{{ blog.metafields.custom.hero_subheading }}</p>
    {% endif %}
  </div>
</section>

<style>
  .blog-hero {
    position: relative;
    min-height: 380px;
    display: grid;
    place-items: center;
    color: #fff;
    text-align: center;
    overflow: hidden;
  }

  .blog-hero__background {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    filter: brightness(0.65);
  }

  .blog-hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(26, 36, 26, 0.65), rgba(203, 167, 160, 0.45));
  }

  .blog-hero__inner {
    position: relative;
    z-index: 2;
    padding: 0 1.5rem;
  }

  .blog-hero__title {
    font-family: "Playfair Display", serif;
    font-size: clamp(2.6rem, 5vw, 3.6rem);
    margin: 0 0 0.75rem;
  }

  .blog-hero__subtitle {
    max-width: 620px;
    margin: 0 auto;
  }
</style>

{% schema %}
{
  "name": "Blog hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading"
    }
  ],
  "presets": [
    {
      "name": "Blog hero",
      "category": "Blog"
    }
  ]
}
{% endschema %}
