<section class="home-featured-collections" data-section-id="{{ section.id }}">
  {% render 'card-grid', parent_section: section, grid_settings: section.settings, grid_blocks: section.blocks %}
</section>

{% schema %}
{
  "name": "Home featured collections",
  "max_blocks": 4,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop the Hill Country collections"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Curated bouquets, subscriptions, and gifts for every Central Texas celebration."
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title override"
        },
        {
          "type": "textarea",
          "id": "body",
          "label": "Description override"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image override"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link override"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "Link label",
          "default": "Shop now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured collections",
      "category": "Custom",
      "blocks": [
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}
